/* miniprogram/pages/result/result.wxss */
page {
  padding: 30rpx;
  box-sizing:border-box;
  background: rgb(242, 242, 242);
}
.page {
  background: #fff;
}
.block {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.avatar {
  height:100rpx;
  width:100rpx;
  border-radius:50%;
  margin-bottom: 20rpx;
}
.oldman {
  height: 300rpx;
  width: 300rpx;
  margin:0 auto;
  display: flex;
}
.title {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.intro {
  display: flex;
}
.myqrcode {
  display: flex;
  justify-content:center;
  align-items:center;
}
.qrcode {
  height: 300rpx;
  width: 300rpx;
}
.wavy-line {
  transform-origin: center left;
  transform: rotate(360deg);
  width: 696rpx;
  height: 20rpx;
  background-image: radial-gradient(circle, rgb(242, 242, 242), rgb(242, 242, 242) 10rpx, transparent 0, transparent 5rpx, transparent 15rpx, transparent);
  background-size: 38rpx 38rpx;
  background-repeat: repeat-x;
}
