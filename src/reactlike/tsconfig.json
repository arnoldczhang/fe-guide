{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "diagnostics": false,
        "pretty": true,
        "listFiles": false,
        "declaration": true,
        "jsx": "react",
        "target": "es2017",
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "files": [
        "test/index.tsx"
    ],
    "include": [
        "src/reactlike/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}