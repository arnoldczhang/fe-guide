{
    "compilerOptions": {
        "module": "ES6",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "diagnostics": false,
        "pretty": true,
        "listFiles": false,
        "declaration": true,
        "rootDir": "../react",
        "jsx": "react",
        "target": "es6",
        "lib": ["es5", "es6", "dom"],
        "moduleResolution": "node",
        "strictNullChecks": true
    },
    "include": [
        "../react/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest"
    ],
    "types": [
        "typePatches"
    ]
}