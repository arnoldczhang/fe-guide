{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "jsx": "react",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "diagnostics": false,
    "pretty": true,
    "listFiles": false,
    "declaration": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}